@model TiendaMVC.Models.Producto
@{
    ViewData["Title"] = EndWriteAttribute Producto;
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-asp-for="Id"/>
    <div class="form-group">
        <label asp-asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <button type="Index" class="btn btn-secondary">Cancelar</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}